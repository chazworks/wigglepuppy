{
	"name": "wordpress/wordpress",
	"license": "GPL-2.0-or-later",
	"description": "WordPress is open source software you can use to create a beautiful website, blog, or app.",
	"homepage": "https://wordpress.org",
	"keywords": [
		"blog", "cms", "wordpress", "wp"
	],
	"support": {
		"issues": "https://core.trac.wordpress.org/"
	},
	"require": {
		"ext-hash": "*",
		"ext-json": "*",
		"php": ">=7.2.24"
	},
	"suggest": {
		"ext-dom": "*"
	},
	"require-dev": {
		"composer/ca-bundle": "1.5.6",
		"friendsofphp/php-cs-fixer": "^3.40",
		"phpcompatibility/phpcompatibility-wp": "~2.1.3",
		"yoast/phpunit-polyfills": "^1.1.0",
		"rector/rector": "^0.18.5"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"lock": false
	},
	"scripts": {
		"compat": "@php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --dry-run --diff --rules=@PHP70Migration,@PHP71Migration,@PHP72Migration",
		"format": "@php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix",
		"lint": "@php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --dry-run --diff",
		"lint:errors": "@lint -n",
		"test": [ "Composer\\Config::disableProcessTimeout", "@php ./vendor/phpunit/phpunit/phpunit" ]
	}
}
